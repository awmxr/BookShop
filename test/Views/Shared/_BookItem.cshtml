@model test.Models.Book 

<div class = "row">
        <div class = "col-sm-3" ><img src = "@Model.ImagePath" alt = "@Model.Name" class = "img-fluid" /></div>
        <div class = "col-sm-9" >
            <h4> @Model.Name </h4>
            <p> Author : @Model.Author</p>
            <p> Year : @Model.Year</p>
            <p> Pages : @Model.Pages</p>
            <p> Price : @Model.Price</p>

            <a asp-action = "more" asp-route-id = "@Model.Id" asp-area = "" asp-controller = "book" class = "btn btn-primary">more ...</a>
            <a asp-action = "create" asp-route-bookid = "@Model.Id" asp-area = ""  asp-controller = "order" class = "btn btn-success" style = "width:200px" > order now</a>

        </div>

    </div>